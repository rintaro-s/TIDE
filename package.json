{
  "name": "tova-ide",
  "version": "1.0.0",
  "description": "Arduino/PlatformIO統合開発環境 - Nexus Assistant IDE (NAI)",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production npm run build:main && npm run build:renderer",
    "build:main": "cross-env NODE_ENV=production tsc -p tsconfig.main.json",
    "build:renderer": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "rebuild": "npm run clean && npm run build",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "cross-env NODE_ENV=development tsc -p tsconfig.main.json --watch",
    "dev:renderer": "cross-env NODE_ENV=development webpack serve --config webpack.config.js",
    "start": "cross-env NODE_ENV=production electron .",
    "start:fresh": "npm run rebuild && npm start",
    "package": "electron-builder",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "css-loader": "^6.8.1",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "html-webpack-plugin": "^5.5.3",
    "monaco-editor-webpack-plugin": "^7.1.1",
    "rimraf": "^5.0.1",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.5.0",
    "@types/ws": "^8.18.1",
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "fuse.js": "^7.0.0",
    "lodash.debounce": "^4.0.8",
    "node-pty": "^0.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.0",
    "ws": "^8.18.3"
  },
  "build": {
    "appId": "com.tova.ide",
    "productName": "Tova IDE",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
